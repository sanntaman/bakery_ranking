<h2>ユーザー編集</h2>

<%= form_with model: @user do |f| %>
  <div style="margin-bottom: 40px;">
    <label for="inputName">ニックネーム</label>
    <%= f.text_field :name, value: @user.name, autofocus: true, id:"inputName", placeholder:"名前" %>
  </div>
  <div style="margin-bottom: 40px;">
    <label for="Image">ユーザー画像</label>
    <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>
  <div style="margin-bottom: 40px;">
    <%= f.submit "編集" %>
  </div>
<% end %>